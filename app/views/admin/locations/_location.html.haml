%tr.node.level-1
  %td.location-title
    = image("location", :class => "icon", :alt => 'page-icon', :title => '')
    = link_to_location_edit_form location
  %td.info
    = h location.full_address
      
  - if config['locations.use_groups?']
    %td
      = location.group
  %td.remove= link_to_location_removal_page location